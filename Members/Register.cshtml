@model WebApplication8.Models.User

@{
    ViewBag.Title = "註冊";
}

<style>
    body {
        padding-top: 100px;
        padding-left: 30px;
    }

    h1 {
        padding-top: 20px;
    }

    .form-group {
        width: 300px
    }
</style>
<div class="row bg-light mx-auto position-relative" style="max-width:420px;border-radius:20px;">
    <div class="form-horizontal container">
        @using (Html.BeginForm())
        {
            <div>
                <h1 class="text-center">註冊</h1>
            </div>
            <div class="form-group container">
                @Html.LabelFor(model => model.Account, new { @class = "colxs-4 col-md-5 form-label" })
                <div class="col-xs-8 col-md-11">
                    @Html.TextBoxFor(model => model.Account, new { @class = "form-control w-20" })
                    @Html.ValidationMessageFor(model => model.Account, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="form-group container">
                @Html.LabelFor(model => model.Password, new { @class = "colxs-4 col-md-5 form-label " })
                <div class="col-xs-8 col-md-11">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control w-15" })
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="form-group container">
                @Html.LabelFor(model => model.Email, new { @class = "colxs-4 col-md-5 form-label " })
                <div class="col-xs-8 col-md-11">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control w-15" })
                    @Html.ValidationMessageFor(model => model.Email, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="form-group container">
                @Html.LabelFor(model => model.Name, new { @class = "colxs-4 col-md-5 form-label " })
                <div class="col-xs-8 col-md-11">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control w-15" })
                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "label label-danger" })
                </div>
            </div>

            <div class="form-group container">
                <div class="col-md-offset-0 col-md-10">
                    <input class="btn btn-primary" type="submit" value=" 註冊 " />
                    <input class="btn btn-primary" type="button" value="去登入" onclick="location.href='@Url.Action("Login")'">
                </div>
            </div>

        }
    </div>
</div>
