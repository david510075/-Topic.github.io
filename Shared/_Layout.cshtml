@using WebApplication8.ViewModel
@using WebApplication8.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>幫浪浪找個家</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        html, body {
            height: 100%;
            background-color: #fff;
        }

        .img-cover {
            background-position: center;
            background-size: cover;
            position: fixed;
            width: 100%;
            height: 100%;
            z-index: 10;
        }

        .header-menu {
            z-index: 11;
            position: fixed;
            top: 0;
            left: 0;
            background-color: rgb(0 0 0 / 80%) !important;
        }

        .header-menu a {
            font-size: 20px;
            color: #fff !important;
            font-weight: 900;
            margin: 0 20px;
        }
    </style>
</head>
<body>
    @RenderBody()
    <!--
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
    </footer>-->
    <nav class="navbar navbar-light bg-light header-menu w-100 justify-content-end">
        <div class="d-flex align-items-center">
            @if (Request.IsAuthenticated)
            {
                <a class="navbar-brand" href="/Item/Index">浪浪公告<br><span>ROVE</span></a>
                <a class="navbar-brand" href="/Other/Knowledge">認養知識<br><span>LORE</span></a>
                <a class="navbar-brand" href="/Other/shelter">收容所<br><span>SHELTER</span></a>
                <a class="navbar-brand" href="/Members/Logout">登出<br><span>SIGN OUT</span></a>
            }
            else
            {
                <a class="navbar-brand" href="/Item/Index">浪浪公告<br><span>ROVE</span></a>
                <a class="navbar-brand" href="/Other/Knowledge">認養知識<br><span>LORE</span></a>
                <a class="navbar-brand" href="/Other/shelter">收容所<br><span>SHELTER</span></a>
                <a class="navbar-brand" href="/Members/Register">註冊<br>REGISTER</a>
                <a class="navbar-brand" href="/Members/Login">登入<br>LOGIN</a>
            }
        </div>
    </nav>
    <!-- @Styles.Render("~/Content/css") -->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function close_modal() {
            $('.modal').modal('hide')
            $('.modal-backdrop').remove()
        }
    </script>
</body>
</html>
